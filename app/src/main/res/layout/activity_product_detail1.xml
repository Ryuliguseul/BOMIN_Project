<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="166dp"
        android:layout_height="36dp"
        android:textColor="#444444"
        android:textSize="24sp"

        android:layout_marginTop="48dp"
        android:layout_marginLeft="20dp"

        android:text="가입 가능한 상품"
        android:fontFamily="@font/default_font"
        >
    </TextView>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:background="@drawable/product_layout"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="77dp"
                android:layout_height="20dp"
                android:textColor="@color/colorPurple"
                android:textSize="12sp"
                android:background="@drawable/edge"
                android:gravity = "center"

                android:layout_marginTop="17dp"
                android:layout_marginLeft="18dp"

                android:text="기간 내 보장"
                android:fontFamily="@font/default_font"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="110dp"


                android:text="30,000원"
                android:fontFamily="@font/default_font"
                >

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"

                android:layout_marginTop="17dp"

                android:text="/1달"
                android:fontFamily="@font/font_regular"
                >

            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:textSize="15sp"

            android:layout_marginTop="52dp"
            android:layout_marginLeft="16dp"

            android:text="대인배상"
            android:fontFamily="@font/default_font">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:textSize="15sp"
            android:layout_marginLeft="16dp"

            android:text="다른 사람에게 입힌 피해를 보상합니다.\n(사망, 부상, 후유장애 등)"
            android:fontFamily="@font/font_regular">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"

            android:text="최소 2천~최대 1억 5천만원까지"
            android:fontFamily="@font/default_font">
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#444444"
        android:text="이용 기간 동안 무사고 시,\n플랫폼 이용료를 제외한 보험료가 환급됩니다."
        android:fontFamily="@font/font_regular"></TextView>

    <Button
        android:id="@+id/join"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:text="가입하기"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/default_font"></Button>
</LinearLayout>