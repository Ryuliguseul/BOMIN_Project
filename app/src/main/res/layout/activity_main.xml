<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="166dp"
        android:layout_height="36dp"
        android:textColor="#444444"
        android:textSize="24sp"

        android:layout_marginTop="48dp"
        android:layout_marginLeft="20dp"

        android:text="가입 가능한 상품"
        android:fontFamily="@font/default_font"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/product1"
        android:layout_width="320dp"
        android:layout_height="116dp"
        android:background="@drawable/product_layout"
        android:layout_marginTop="35dp"
        android:layout_gravity = "center_horizontal"
        android:orientation="vertical"
        android:clickable="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="77dp"
                android:layout_height="20dp"
                android:textColor="@color/colorPurple"
                android:textSize="12sp"
                android:background="@drawable/edge"
                android:gravity = "center"

                android:layout_marginTop="17dp"
                android:layout_marginLeft="24dp"

                android:text="기간 내 보장"
                android:fontFamily="@font/default_font"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"

                android:layout_marginTop="17dp"
                android:layout_marginLeft="105dp"


                android:text="30,000원"
                android:fontFamily="@font/default_font"
                >

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"

                android:layout_marginTop="17dp"

                android:text="/1달"
                android:fontFamily="@font/font_regular"
                >

            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginTop="32dp"
            android:layout_marginLeft="16dp"

            android:text="정해진 기간 동안 안심하고 이용하세요!"
            android:fontFamily="@font/font_regular"
            >
        </TextView>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/product2"
        android:layout_width="320dp"
        android:layout_height="116dp"
        android:background="@drawable/product_layout"
        android:layout_marginTop="24dp"
        android:layout_gravity = "center_horizontal"
        android:orientation="vertical"
        android:clickable="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="77dp"
                android:layout_height="20dp"
                android:textColor="@color/colorPurple"
                android:textSize="12sp"
                android:background="@drawable/edge"
                android:gravity = "center"

                android:layout_marginTop="17dp"
                android:layout_marginLeft="24dp"

                android:text="탈 때마다"
                android:fontFamily="@font/default_font"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"

                android:layout_marginTop="17dp"
                android:layout_marginLeft="116dp"


                android:text="200원"
                android:fontFamily="@font/default_font"
                >

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"

                android:layout_marginTop="17dp"

                android:text="/10분"
                android:fontFamily="@font/font_regular"
                >

            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginTop="32dp"
            android:layout_marginLeft="16dp"

            android:text="저렴한 가격으로 부담없이 이용하세요!"
            android:fontFamily="@font/font_regular"
            >
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>