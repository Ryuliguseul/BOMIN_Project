<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="166dp"
        android:layout_height="36dp"
        android:textColor="#444444"
        android:textSize="24sp"

        android:layout_marginTop="48dp"
        android:layout_marginLeft="20dp"

        android:text="가입 가능한 상품"
        android:fontFamily="@font/default_font"
        >
    </TextView>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="260dp"
        android:background="@drawable/product_layout"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="77dp"
                android:layout_height="20dp"
                android:textColor="@color/colorPurple"
                android:textSize="12sp"
                android:background="@drawable/edge"
                android:gravity = "center"

                android:layout_marginTop="17dp"
                android:layout_marginLeft="18dp"

                android:text="기간 내 보장"
                android:fontFamily="@font/default_font"
                >
            </TextView>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="110dp"
                android:text="8,000원"
                android:textColor = "#444444"
                android:fontFamily="@font/default_font"
                >

            </TextView>
            <TextView
                android:id="@+id/term"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="17dp"
                android:text="/1달"
                android:fontFamily="@font/font_regular"
                >

            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:textSize="15sp"

            android:layout_marginTop="52dp"
            android:layout_marginLeft="16dp"

            android:text="본인 신체 상해"
            android:fontFamily="@font/default_font">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:textSize="15sp"
            android:layout_marginLeft="16dp"

            android:text="상해 1급 ~ 12급까지\n보험금 최대 120만원 지급"
            android:fontFamily="@font/font_regular">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"

            android:text="PM 기기 보상"
            android:fontFamily="@font/default_font">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:textSize="15sp"
            android:layout_marginLeft="16dp"

            android:text="최대 100만원 지급"
            android:fontFamily="@font/font_regular">
        </TextView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom = "true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity = "center"
                android:layout_marginBottom = "24dp"
                android:gravity = "center"
                android:textSize="15sp"
                android:textColor="#444444"
                android:text="이용 기간 동안 무사고 시,\n최소 80% 이상의 보험료가 환급됩니다."
                android:fontFamily="@font/font_regular"></TextView>
            <Button
                android:id="@+id/join"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginBottom = "28dp"
                android:background="@drawable/button"
                android:layout_gravity = "center"

                android:text="가입하기"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/default_font"></Button>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>